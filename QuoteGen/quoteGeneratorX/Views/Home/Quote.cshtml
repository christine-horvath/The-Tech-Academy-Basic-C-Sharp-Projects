@using quoteGeneratorX.Models;
@Styles.Render("~/Content/css")

<div class=" row row-no-gutters m-4">
    <div class="card col-sm-11 col-md-9 col-lg-5 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Quotes</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Quote", "Home", FormMethod.Post))
            {
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="row mb-3">
                    <div class="col-2">
                        @Model.FirstName
                    </div>
                    <div class="col-2">
                        @Model.LastName
                    </div>
                    <div class="col-5">
                        @Model.EmailAddress
                    </div>
                    <div class="col-5">
                        @Model.Quote

                    </div>
                    <div class="col-3">
                        <button type="submit" class="btn btn-danger btn-block">
                            View Quote
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
